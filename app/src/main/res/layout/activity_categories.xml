<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CategoriesActivity" android:background="@color/blue_2">

    <TextView
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white" android:textSize="48sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/select_order_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:fontFamily="@font/roboto_bold" android:textColor="@color/white" android:textSize="20sp"/>
    <TableLayout
            android:layout_width="402dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tableLayout" android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="20dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:stretchColumns="*"
                  android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/radius_blue"
                    android:padding="10sp"
                    android:layout_marginStart="20sp" android:layout_marginLeft="20sp" android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:layout_marginRight="5sp" android:layout_marginEnd="5sp"
                    android:id="@+id/linearLayoutStarter" android:onClick="onClickStarter">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/starter"
                        android:id="@+id/imageView6" android:layout_weight="5"/>
                <TextView
                        android:text="@string/starter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                        android:textAlignment="center" android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white" android:textSize="14sp"
                        android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/radius_blue"
                    android:padding="10sp"
                    android:layout_marginEnd="20sp" android:layout_marginStart="5sp" android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:layout_marginRight="20sp" android:layout_marginLeft="5sp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/plate"
                        android:id="@+id/imageView6" android:layout_weight="5"/>
                <TextView
                        android:text="@string/plates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                        android:textAlignment="center" android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white" android:textSize="14sp"
                        android:gravity="center"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:stretchColumns="*"
                  android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/radius_blue"
                    android:padding="10sp"
                    android:layout_marginStart="20sp" android:layout_marginLeft="20sp" android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:layout_marginRight="5sp" android:layout_marginEnd="5sp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/pizza"
                        android:id="@+id/imageView6" android:layout_weight="5"/>
                <TextView
                        android:text="@string/pizza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                        android:textAlignment="center" android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white" android:textSize="14sp"
                        android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/radius_blue"
                    android:padding="10sp"
                    android:layout_marginEnd="20sp" android:layout_marginStart="5sp" android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:layout_marginRight="20sp" android:layout_marginLeft="5sp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/sandwich"
                        android:id="@+id/imageView6" android:layout_weight="5"/>
                <TextView
                        android:text="@string/sandwich"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                        android:textAlignment="center" android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white" android:textSize="14sp"
                        android:gravity="center"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:stretchColumns="*"
                  android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/radius_blue"
                    android:padding="10sp"
                    android:layout_marginStart="20sp" android:layout_marginLeft="20sp" android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:layout_marginRight="5sp" android:layout_marginEnd="5sp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/cupcake"
                        android:id="@+id/imageView6" android:layout_weight="5"/>
                <TextView
                        android:text="@string/sandwich"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                        android:textAlignment="center" android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white" android:textSize="14sp"
                        android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/radius_blue"
                    android:padding="10sp"
                    android:layout_marginEnd="20sp" android:layout_marginStart="5sp" android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:layout_marginRight="20sp" android:layout_marginLeft="5sp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/drink"
                        android:id="@+id/imageView6" android:layout_weight="5"/>
                <TextView
                        android:text="@string/drink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                        android:textAlignment="center" android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white" android:textSize="14sp"
                        android:gravity="center"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/arrow_left_white"
                android:id="@+id/imageView2"
                tools:ignore="ImageContrastCheck" android:layout_weight="1" android:minWidth="30dp"
                android:onClick="onClickReturn" android:contentDescription="@string/default_text"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="100"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/cart" android:id="@+id/imageView5"
                android:layout_weight="1" android:layout_marginRight="10sp" android:onClick="onClickOrderConfirmation"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>