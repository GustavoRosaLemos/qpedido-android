<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.ItemFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="114dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/linearLayout5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/radius_white"
                android:layout_margin="10sp">
            <ImageView
                    android:src="@drawable/item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/imageView7"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1" android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10sp" android:layout_weight="10"
                    android:layout_marginTop="10sp" android:layout_marginBottom="10sp">
                <TextView
                        android:text="@string/item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textViewName" android:layout_weight="1"
                        android:textSize="16sp" android:fontFamily="@font/roboto_bold"/>
                <TextView
                        android:text="@string/item_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textViewDescription"
                        android:layout_weight="1"
                        android:textSize="16sp" android:fontFamily="@font/roboto_bold"/>
                <TextView
                        android:text="@string/item_times_ordered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewTimesOrdened"
                        android:layout_weight="1"
                        android:textSize="16sp" android:fontFamily="@font/roboto_bold"/>
                <TextView
                        android:text="@string/item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewPrice" android:layout_weight="1"
                        android:textSize="16sp" android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>